<html>
<link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link
  href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
  rel="stylesheet">
<!-- Custom styles for this template-->
<link href="/css/sb-admin-2.min.css" rel="stylesheet">

</head>
<body class="bg-gradient-primary">

  <div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <form class="row" action="/destination/add_destination" method="post">
          
          <!-- Nested Row within Card Body -->
          <div class="d-flex w-100" style="height: auto;">
            <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
              <hr class="sidebar-divider my-0">
              <hr class="sidebar-divider">
              <li class="nav-item">
                <a href="#" class="text-decoration-none text-dark px-5 py-3 bg-light w-100 d-block">Destination</a>
              </li>
              <hr class="sidebar-divider d-none d-md-block">
            </ul>

            <div class="p-5" style="width: 70%;">
              <div class="mb-5">
                <h3>Add Destination Category </h3>
              </div>
              <div class="card-body">
                <div class="form-group row">
                  <label class="col-sm-3 text-end control-label col-form-label">Select Category</label>
                  <select name="destination_cateId" class="form-control">
                    <option value="">Select Destination Category</option>
                    <% for(var i of dest_category) { %>
                      <option value="<%= i.id %>">
                        <%= i.destination_cate %>
                      </option>
                      <% } %>
                  </select>
                </div>

                <div class="form-group row">
                  <label
                  
                       class="col-sm-3 text-end control-label col-form-label">Destination</label>
                  <div class="col-sm-9">
                       <input type="text" name="destination" class="form-control" id="name"
                            placeholder="Enter destination" value="" />
                  </div>
             </div>
             <div class="form-group row">
              <label
              
                   class="col-sm-3 text-end control-label col-form-label">Coutry</label>
              <div class="col-sm-9">
                   <input type="text" name="country" class="form-control" id="name"
                        placeholder="Enter Country" value="" />
              </div>
         </div>
                <br>
                <input type="submit" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm p-2"
                  value="Submit"></input>
              </div>

            </div>
          </div>
      </div>
      </form>
    </div>
  </div>
  </div>

  </div>


  
</body>
<!-- Bootstrap core JavaScript-->
<script src="/vendor/jquery/jquery.min.js"></script>
